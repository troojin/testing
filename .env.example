# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname
JWT_SECRET=replace_with_long_random_string

# Maintenance
MAINTENANCE_MODE=true
MAINTENANCE_SECRET_KEY=replace_with_secret_key
ENCRYPTION_KEY=replace_with_64_char_random_string

# Uploads
UPLOAD_ACCESS_KEY=replace_with_upload_key

# Mailchimp
MAILCHIMP_API_KEY=replace_with_mailchimp_key
MAILCHIMP_SERVER_PREFIX=us17
MAILCHIMP_LIST_ID=replace_with_list_id

# Email
EMAIL_USERNAME=support@example.com
EMAIL_FROM_NAME=Support Team
EMAIL_USER=email@example.com
EMAIL_PASS=app_password_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_refresh_token
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/callback

# AWS
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-2
AWS_S3_BUCKET_NAME=your_bucket_name

# App
BASE_URL=https://yourdomain.com

# Cloudflare
CLOUDFLARE_SECRET_KEY=your_cloudflare_secret
