{
  "version": 2,

  "routes": [
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/js/(.*)", "dest": "/client/js/$1" },
    { "src": "/css/(.*)", "dest": "/client/css/$1" },

    { "src": "/api/(.*)", "dest": "/server/server.js" },
    { "src": "/api/verify-secret-key", "dest": "/server/server.js" },

    { "src": "/(.*)", "dest": "/server/server.js" }
  ],

  "env": {
    "MAINTENANCE_MODE": "false"
  }
}
